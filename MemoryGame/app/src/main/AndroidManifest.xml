<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.memory_game.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.android.MemoryGameActivities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.android.MemoryGameActivities.ModeSelection" />
        <activity android:name="com.android.MemoryGameActivities.SelectionScreen" />
        <activity android:name="com.android.MemoryGameActivities.Highscores" />
        <activity android:name="com.android.MemoryGameActivities.rulesPage"/>
        <activity android:name="com.android.MemoryGameActivities.findPlayerActivity" />
        <activity android:name="com.android.MemoryGameActivities.PairsOfTwoCardsActivity" />
    </application>

</manifest>